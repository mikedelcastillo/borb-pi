{
  "name": "borb-pi",
  "version": "0.0.1",
  "description": "Raspberry Pi driven robot",
  "main": "index.js",
  "scripts": {
    "mjpg-streamer": "cd ./mjpg-streamer/mjpg-streamer-experimental/ && ./mjpg_streamer",
    "camera": "npm run mjpg-streamer -- -i 'input_uvc.so -r 640x360 -q 24' -o 'output_http.so -w ./www -p 5000'",
    "camera-hd": "npm run mjpg-streamer -- -i 'input_uvc.so -r 1920x1080 -q 60' -o 'output_http.so -w ./www -p 5000'",
    "nginx": "node ./node/scripts/nginx",
    "server": "node ./node/server",
    "setup": "bash setup.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikedelcastillo/borb-pi.git"
  },
  "author": "Mike del Castillo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mikedelcastillo/borb-pi/issues"
  },
  "homepage": "https://github.com/mikedelcastillo/borb-pi#readme",
  "dependencies": {
    "@hapi/boom": "^9.1.3",
    "@hapi/hapi": "^20.1.5",
    "axios": "^0.21.1",
    "consola": "^2.15.3",
    "dotenv": "^10.0.0",
    "joi": "^17.4.1",
    "shelljs": "^0.8.4",
    "socket.io": "^4.1.3",
    "uuid": "^8.3.2"
  }
}
